modules = ["nodejs-20"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081

[[ports]]
localPort = 8082
externalPort = 3000

[nix]
channel = "stable-25_05"
packages = ["nano"]

[workflows]
runButton = "Full Stack Dev"

[[workflows.workflow]]
name = "Dev Server"
author = 46511181
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack Dev"
author = 46511181
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npx tsx index.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"

[[workflows.workflow]]
name = "Clean Start Server"
author = 46511181
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"npx tsx index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npx tsx index.ts"

[agent]
expertMode = true
